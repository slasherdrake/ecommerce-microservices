{
  "realm": "drake-realm",
  "enabled": true,

  "roles": {
    "realm": [
      {
        "name": "ecommerce-admin",
        "composite": true,
        "composites": {
          "client": {
            "ecommerce": ["ADMIN"]
          }
        }
      },
      {
        "name": "ecommerce-user",
        "composite": true,
        "composites": {
          "client": {
            "ecommerce": ["USER"]
          }
        }
      }
    ],
    "client": {
      "ecommerce": [
        { "name": "ADMIN" },
        { "name": "USER" }
      ]
    }
  },

  "clients": [
    {
      "clientId": "ecommerce",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "bearerOnly": false,
      "fullScopeAllowed": true,

      "redirectUris": ["http://localhost:80*"],
      "webOrigins": ["*"],

      "attributes": {
        "oauth2.device.authorization.grant.enabled": "false",
        "backchannel.logout.session.required": "true",
        "backchannel.logout.revoke.offline.tokens": "false"
      },

      "defaultClientScopes": [
        "roles",
        "profile",
        "email",
        "web-origins",
        "acr"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ],

      "authorizationServicesEnabled": true,
      "authorizationSettings": {
        "allowRemoteResourceManagement": true,
        "policyEnforcementMode": "ENFORCING",
        "resources": [
          {
            "name": "Default Resource",
            "type": "urn:ecommerce:resources:default",
            "ownerManagedAccess": false,
            "uris": ["/*"]
          }
        ],
        "policies": [
          {
            "name": "Default Policy",
            "description": "Grants access to all authenticated users",
            "type": "role",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "roles": "[{\"id\":\"ecommerce-user\",\"required\":false}]"
            }
          }
        ],
        "decisionStrategy": "UNANIMOUS"
      }
    }
  ],

  "users": [
    {
      "username": "drake-admin",
      "enabled": true,
      "emailVerified": false,
      "email": "drakeadmin@gmail.com",
      "firstName": "Slasher",
      "lastName": "Drake",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ecommerce-admin",
        "default-roles-drake-realm"
      ],
      "clientRoles": {
        "ecommerce": ["ADMIN"]
      }
    },
    {
      "username": "drake-user",
      "enabled": true,
      "email": "drakeuser@gmail.com",
      "firstName": "Slasher",
      "lastName": "Drake",
      "emailVerified": false,
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ecommerce-user",
        "default-roles-drake-realm"
      ],
      "clientRoles": {
        "ecommerce": ["USER"]
      }
    }
  ]
}



